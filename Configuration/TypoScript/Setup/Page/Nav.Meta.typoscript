lib.navMeta = COA
lib.navMeta {
    wrap = <nav aria-label="Meta-Navigation"><ul class="metanav nav">|</ul></nav>

    10 = HMENU
    10 {
        special = directory
        special.value = {$config.pids.Meta}
        includeNotInMenu = 0

        1 = TMENU
        1 {
            expAll = 1
            NO.wrapItemAndSub = <li class="nav-item">|</li>
            NO.ATagParams = class="nav-link fw-bold"

            CUR < .NO
            CUR = 1
            CUR.doNotLinkIt = 1
            CUR.allWrap = <strong class="nav-link">|</strong>
            CUR.stdWrap.htmlSpecialChars = 1
        }
    }
}
