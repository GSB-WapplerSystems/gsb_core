lib.navMeta = COA
lib.navMeta {
    wrap = <ul class="metanav top">|</ul>

    10 = HMENU
    10 {
        special = directory
        special.value = {$config.pids.Meta}
        includeNotInMenu = 0

        1 = TMENU
        1 {
            expAll = 1
            NO.wrapItemAndSub = <li>|</li>

            CUR < .NO
            CUR = 1
            CUR.doNotLinkIt = 1
            CUR.allWrap = <strong>|</strong>
            CUR.stdWrap.htmlSpecialChars = 1
        }
    }
}
