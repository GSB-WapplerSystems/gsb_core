    1 {
      noBlur = 1
      NO = 1
      NO {
        doNotLinkIt = 1
        linkWrap = <li>|</li>
        stdWrap {
          override = Deutsch || English || Fran√ßais
          typolink {
            parameter.data = page:uid
            additionalParams = &L=0 || &L=1 || &L=2
            ATagParams = hreflang="de-DE" || hreflang="en-GB" || hreflang="fr-FR"
