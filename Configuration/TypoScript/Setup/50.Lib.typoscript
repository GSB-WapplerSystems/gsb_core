lib {
  pageurl = TEXT
  pageurl.data = getIndpEnv:TYPO3_REQUEST_URL

  pageid = TEXT
  pageid.data = page:uid

  math = TEXT
  math {
    current = 1
    prioriCalc = 1
  }

  home = TEXT
  home.value = {$config.pids.Home}

  parseFunc_RTE {
    externalBlocks {
      table {
        stdWrap {
          HTMLparser = 1
          HTMLparser {
            tags {
              table {
                fixAttrib {
                  class {
                    default = table table-striped table-hover
                    always = 1
                    list = table table-striped table-hover
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
